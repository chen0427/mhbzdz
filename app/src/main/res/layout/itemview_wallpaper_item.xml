<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_itemWallpaperPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_itemWallpaperPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_itemWallpaperPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/coverCheckBox"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cb_itemWallpaperPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="false"
                android:visibility="visible"
                app:theme="@style/whiteCheckBox" />
        </FrameLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>