<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_tabTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_manhua_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_more_black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_comic_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <include layout="@layout/includeview_comic_recommend_item" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_comic_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <include layout="@layout/includeview_comic_recommend_item" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_comic_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <include layout="@layout/includeview_comic_recommend_item" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_comic_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <include layout="@layout/includeview_comic_recommend_item" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_comic_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <include layout="@layout/includeview_comic_recommend_item" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_comic_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <include layout="@layout/includeview_comic_recommend_item" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>